<UserControl x:Class="vs_plugin.ToolWindow1Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             mc:Ignorable="d"
             Name="MyToolWindow">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static vsshell:VsBrushes.BrandedUITextKey}}" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static vsshell:VsBrushes.BrandedUITextKey}}" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static vsshell:VsBrushes.BrandedUITextKey}}" />
        </Style>
    </UserControl.Resources>
    <Grid x:Name="idetectorPlugin" VerticalAlignment="Stretch" >
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Image Source="Resources/Logo.png" HorizontalAlignment="Left"/>
        <StackPanel Grid.Row="2" >
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                <StackPanel x:Name="ScanButtons" VerticalAlignment="Top" HorizontalAlignment="Left" Orientation="Horizontal" Grid.ColumnSpan="2">
                    <Button x:Name="ScanProject" Content="Scan Current Project" HorizontalAlignment="Left" VerticalAlignment="Top" MinWidth="120" Click="Scan_Current_project" Background="{x:Null}" />
                    <Button x:Name="ScanFile" Content="Scan Current File" HorizontalAlignment="Left" VerticalAlignment="Top" MinWidth="100" Click="Scan_Current_file" Background="{x:Null}"/>
                </StackPanel>
            </StackPanel>
            <Grid HorizontalAlignment="Stretch" Grid.Row="2" VerticalAlignment="Stretch" Name="DesignPatterns" Grid.ColumnSpan="2" Height="auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel x:Name="PatternList" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <StackPanel x:Name="Summary" Visibility="Collapsed" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Vertical">
                        <Label x:Name="PatternName" Content="Summary" HorizontalAlignment="Stretch" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Grid.ColumnSpan="2"/>
                        <StackPanel x:Name="SummaryCondition" Orientation="Horizontal">
                            <Label x:Name="ConditionIcon" Content="⚠️" Visibility="Visible" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="15" Foreground="Red"/>
                            <Label x:Name="ConditionNumber" Content="Condition" Margin="-7,0" HorizontalAlignment="Stretch" VerticalAlignment="Top" FontWeight="Bold" FontSize="15"/>
                        </StackPanel>
                        <Canvas x:Name="Canvas" Height="{Binding ElementName=ConditionText, Path=ActualHeight}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                            <TextBlock x:Name="ConditionText" Text="Placeholder text"
                            Width="{Binding ElementName=Canvas, Path=ActualWidth}"
                            TextWrapping="WrapWithOverflow"/>
                        </Canvas>
                        <StackPanel x:Name="MoreInfo" Margin="0,10,0,0" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" >
                            <Label Content="More info..." FontStyle="Italic"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
            <StackPanel MinWidth="220" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
    
</UserControl>
