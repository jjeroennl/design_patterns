<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vs_plugin"
             xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="vs_plugin.SinglePattern"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" HorizontalAlignment="Stretch">

    <Grid Margin="0,0,0,0">
        <Expander x:Name="PatternName1" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch" Header="{Binding Path=HeaderTitle}" IsExpanded="True" Collapsed="Collapse" Expanded="Collapse">
            <ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0">
                <StackPanel Name="FoundList" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                </StackPanel>
            </ScrollViewer>
        </Expander>
    </Grid>
</UserControl>
