<UserControl x:Class="vs_plugin.UIPattern"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vs_plugin"
             mc:Ignorable="d" 
             Margin="16,0,0,0"
             d:DesignHeight="300" d:DesignWidth="300" HorizontalAlignment="Stretch">

    <Grid Margin="0,0,0,0">
        <TextBlock HorizontalAlignment="Right" Margin="0,0,2,0" TextWrapping="Wrap" Text="0" Name="ScoreBlock"/>
        <Expander x:Name="PatternName" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch" Header="{Binding Path=HeaderTitle}" IsExpanded="False">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0">
                <StackPanel Name="RequirementList" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                </StackPanel>
            </ScrollViewer>
        </Expander>
    </Grid>
</UserControl>

